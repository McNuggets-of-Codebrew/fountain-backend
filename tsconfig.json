{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "module": "es6",
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "typeRoots": ["src/types/global.d.ts"],
    "types": ["node"],
    "paths": {
      "*": ["src/*", "src/types/*.d.ts"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@middleware/*": ["src/middleware/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@types": ["src/types"],
      "@helpers/*": ["src/helpers/*"]
    },
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "build"
  ]
}
