{
  "presets": ["@babel/preset-typescript"],
  "plugins": [
    ["module-resolver", {
      "root": ["./src"],
      "extensions": [".js", ".ts", ".json"],
      "alias": {
        "@routes": "./src/routes",
        "@controllers": "./src/controllers",
        "@services": "./src/services",
        "@middleware": "./src/middleware",
        "@models": "./src/models",
        "@helpers": "./src/helpers",
        "@types": "./src/types"
      }
    }],
    "babel-plugin-add-import-extension"
  ],
  "sourceMaps": true,
  "targets": {
    "node": "current"
  }
}
